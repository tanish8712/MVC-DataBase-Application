@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    <div style="background-color:forestgreen">
        <h3 class="btn-close-white" style="text-align:center;">@TempData["success"]</h3>
    </div>
    
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
              <h2 class="text-primary">CATEGORIES</h2> 
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" style="background-color:brown;"><i class="bi bi-patch-plus"></i>
                Create New Category
            </a>
        </div>
    </div>


<table class=" table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Order Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ob in Model)
        {
         <tr>
             <td width="50%">
                 @ob.Name
             </td>
             <td width="30%">
                 @ob.DisplayOrder
             </td>
             <td width="30%">
                 @ob.CreatedDateTime
             </td>
             <td>
                 <div class="w-75 btn-primary" role="group" style="background-color:transparent;">
                     <a asp-controller="Category" asp-action="Edit" asp-route-id="@ob.ID"
                     class="btn btn-primary mx-2 w-100" style="background-color:olive;"><i class="bi bi-pencil-square"></i>Edit</a>
                      <a asp-controller="Category" asp-action="Delete" asp-route-id="@ob.ID"
                     class="btn btn-primary mx-2" style="background-color:tomato;"><i class="bi bi-trash3"></i>Delete</a>
                 </div>
             </td>
         </tr>
        }
    </tbody>
</table>
</div>